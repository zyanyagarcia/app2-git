<?xml version="1.0" encoding="UTF-8"?>  

<widget xmlns = "http://www.w3.org/ns/widgets"
  xmlns:gap = "http://phonegap.com/ns/1.0"
  id  = "com.phonegap.app2"
  version = "1.0.0">
  
  <name>app2-Especialidad Tecnico en Programacion </name>
  
  <description>
  Aplicacion que muestra indormacion sobre la especialidad de Tecnico en Programacion CBTis
  </description>
  
  <author href="https://build.phonegap.com" email="cb16.carolina.garcia.bielma@gmail.com">
    Zzyanya Carolina Garcia Bielma
  </author>
  
  <!-- Personaliza la aplicacion y plataforma -->
  <preference name="orientation"          value="dafult"/>
  <!--<preference name="orientation"          value="portrait"/>
  <prefernece name="orientation"          value="landscape"/> -->
  <preference name="target-device"          value="universal"/>
  <preference name="fullscreen"           value="true" />
  <preference name="android-installLocation"       value="auto"/>
  <preference name="permissions" value="INTERNET"/>
  
  <!--Plugins-->
  <plugin name="cordova-plugin-device" spec="~1.1.4"/>
  <plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
  <plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>
  
  <!--Para accesar a paginas en internet-->
  <allow-intent href="https://*/*"/>
  <acces origin="https://*/*"/>
  <allow-intent href="http://*/*"/>
  <acces origin="http ://*/*"/>
  <plugin name="cordova-plugin-whitelist"source="npm"/>
  
  <!--Colocar icono app-->
  <icon src="res/android/mdpi.png"/>
  
  </widget>